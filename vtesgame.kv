#:kivy 1.7.0
#
GameWidget:

<PlayerSelectWidget>:
    input_area: input
    start_button: start
    Label:
        font_size: 15
        top: root.height
        center_x: root.width // 2
        text: "Setup the game"
    FloatLayout:
        id: input
        # We'll fill this in dynamically, so we keep references
        # to the text input fields easily
        y: 80
        height: root.height - 160
        width: root.width
    Button:
        id: start
        top: self.height
        right: 20 + self.width
        text: "Start"
        on_release: root.start()
    Button:
        top: self.height
        right: root.right - 20
        text: "Exit"
        on_release: app.stop()

<GameReportManager>:

<PlayerScreen>:
    game: game
    player: player
    BoxLayout:
        id: player
        size: root.width, 50
        size_hint: None, None
        pos_hint: {'top': 1}
    FloatLayout:
        id: game
        # We'll fill this in dynamically, so we keep references
        # to the text input fields easily
        size: root.width, 400
        size_hint: None, None
    Button:
        size: 120, 40
        pos_hint: {'left': 0, 'top': 0.15}
        size_hint: None, None
        text: "Prev Player <--"
        on_release: root.change(-1)
    Button:
        size: 120, 40
        pos_hint: {'right': 1, 'top': 0.15}
        size_hint: None, None
        text: "Next Player -->"
        on_release: root.change(+1)
    Button:
        size: 120, 40
        pos_hint: {'x': 0}
        size_hint: None, None
        text: "Next Turn"
        on_release: root.next_turn()
    Button:
        size: 120, 40
        pos_hint: {'right': 0.4}
        size_hint: None, None
        text: "Oust Player"
        on_release: root.oust()
    Button:
        size: 120, 40
        pos_hint: {'right': 0.6}
        size_hint: None, None
        text: "Update Decks"
        on_release: root.update_decks()

    Button:
        size: 120, 40
        pos_hint: {'right': 1}
        size_hint: None, None
        text: "Stop Game"
        on_release: root.stop_game()
