#:kivy 1.7.0
#
GameWidget:

<PlayerSelectWidget>:
    grid: grid
    Label:
        font_size: 15
        top: root.height
        center_x: root.width // 2
        text: "Setup the game"
    GridLayout:
        id: grid
        # We'll fill this in dynamically, so we keep references
        # to the text input fields easily
        cols: 4
        rows: 7
        top: root.height - 80
        width: root.width
        row_default_height: 40
        row_force_default: True
    Button:
        top: self.height
        right: 20 + self.width
        text: "Start Game"
        on_release: root.start()
    Button:
        top: self.height
        right: root.right - 20
        text: "Exit"
        on_release: app.stop()

<GameReportManager>:

<PlayerScreen>:
    game: game
    player: player
    BoxLayout:
        id: player
        size: root.width, 50
        size_hint: None, None
    GridLayout:
        id: game
        # We'll fill this in dynamically, so we keep references
        # to the text input fields easily
        cols: 4
        rows: 7
        size: root.width, 400
        size_hint: None, None
        row_default_height: 40
        row_force_default: True
    Button:
        size: 120, 40
        pos_hint: {'left': 0, 'top': 0.15}
        size_hint: None, None
        text: "Prev Player <--"
        on_release: root.change(-1)
    Button:
        size: 120, 40
        pos_hint: {'right': 1, 'top': 0.15}
        size_hint: None, None
        text: "Next Player -->"
        on_release: root.change(+1)
    Button:
        size: 120, 40
        pos_hint: {'left': 0.1}
        size_hint: None, None
        text: "Next Turn"
        on_release: root.next_turn()
    Button:
        size: 120, 40
        pos_hint: {'right': 0.5}
        size_hint: None, None
        text: "Oust Player"
        on_release: root.oust()
    Button:
        size: 120, 40
        pos_hint: {'right': 0.9}
        size_hint: None, None
        text: "Stop Game"
        on_release: root.stop_game()
