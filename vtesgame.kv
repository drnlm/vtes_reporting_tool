#:kivy 1.7.0
#
GameWidget:

<PlayerSelectWidget>:
    input_area: input
    start_button: start
    Label:
        top: root.height
        center_x: root.width // 2
        text: "Setup the game"
    FloatLayout:
        id: input
        # We'll fill this in dynamically, so we keep references
        # to the text input fields easily
        y: 80
        height: root.height - 160
        width: root.width
    Button:
        id: start
        top: self.height
        right: 20 + self.width
        text: "Start"
        on_release: root.start()
    Button:
        top: self.height
        right: root.right - 20
        text: "Exit"
        on_release: app.stop()


<MinionRow@BoxLayout>:
    name: name
    torpor: torpor
    size_hint: 1, 0.075
    Label:
        id: name
        size_hint: 0.4, 1
        text: ''
        pos_hint: {'x': 0, 'top': 0}
    Button:
        size_hint: 0.2, 1
        text: 'Burn / remove'
        pos_hint: {'x': 0.4, 'top': 0}
        on_release: root.burn()
    Button:
        id: torpor
        size_hint: 0.2, 1
        text: 'Topor'
        pos_hint: {'x': 0.6, 'top': 0}
        on_release: root.do_torpor()
    Button:
        size_hint: 0.2, 1
        text: 'Act'
        pos_hint: {'x': 0.8, 'top': 0}
        on_release: root.other()


<MasterRow@BoxLayout>:
    name: name
    Label:
        id: name
        size: 200, 30
        text: ''
        pos_hint: {'x': 0, 'top': 0.3}


<PlayerScreen@RelativeLayout>:
    game: game
    player: player
    BoxLayout:
        id: player
        size: root.width, 50
        size_hint: None, None
        pos_hint: {'top': 1}
    ScrollView:
        size: root.width, 400
        size_hint: None, None
        pos_hint: {'right': 1, 'top': 0.9}
        RelativeLayout:
            id: game
            # We'll fill this in dynamically, so we keep references
            # to the text input fields easily
            size: root.width, 800
            size_hint: None, None
            Button:
                size: 120, 40
                size_hint: None, None
                pos_hint: {'right': 1, 'top': 1}
                text: "Pool +"
                on_release: root.change_pool(+1)
            Button:
                size: 120, 40
                size_hint: None, None
                pos_hint: {'right': 0.2, 'top': 1}
                text: "Pool -"
                on_release: root.change_pool(-1)
            Button:
                size: 120, 40
                size_hint: None, None
                pos_hint: {'right': 0.2, 'top': 0.95}
                text: "Add Master"
                on_release: root.add_master()
            Button:
                size: 120, 40
                size_hint: None, None
                pos_hint: {'right': 0.4, 'top': 0.95}
                text: "Add Minion"
                on_release: root.ask_minion_name()
    Button:
        size: 120, 40
        pos_hint: {'left': 0, 'top': 0.15}
        size_hint: None, None
        text: "Prev Player <--"
        on_release: root.change(-1)
    Button:
        size: 120, 40
        pos_hint: {'right': 1, 'top': 0.15}
        size_hint: None, None
        text: "Next Player -->"
        on_release: root.change(+1)
    Button:
        size: 120, 40
        pos_hint: {'x': 0}
        size_hint: None, None
        text: "Next Turn"
        on_release: root.next_turn()
    Button:
        size: 120, 40
        pos_hint: {'right': 0.4}
        size_hint: None, None
        text: "Oust Player"
        on_release: root.oust()
    Button:
        size: 120, 40
        pos_hint: {'right': 0.6}
        size_hint: None, None
        text: "Update Decks"
        on_release: root.update_decks()

    Button:
        size: 120, 40
        pos_hint: {'right': 1}
        size_hint: None, None
        text: "Stop Game"
        on_release: root.stop_game()


<MinionName@Popup>:
    name: name
    size_hint: .6, .6
    auto_dismiss: False
    title: 'Minion Name'
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: name
            size_hint: 1, None
        Button:
            size_hint: 0.5, 0.2
            pos_hint: {'top': 0.1}
            text: 'Done'
            on_release: root.done()
